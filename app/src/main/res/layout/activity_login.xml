<?xml version="1.0" encoding="utf-8"?>
<!-- LOGIN START -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        tools:ignore="UselessParent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:src="@drawable/icon3" />

        <TextView
            android:id="@+id/login_text01"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"

            android:text="Meet\n for\n Universal \n혼자하는 소개팅은 그만! \n ME4U!"
            android:textColor="@color/mainGreen"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/login_text02"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="left"
            android:text="ID" />

        <EditText
            android:id="@+id/login_editText_ID"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:hint="Enter ID"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:backgroundTint="@color/mainGreen"
            />

        <TextView
            android:id="@+id/login_text03"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="left"
            android:text="Password" />

        <EditText
            android:id="@+id/login_editText_PW"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:hint="Enter Password"
            android:singleLine="true"
            android:inputType="textPassword"
            android:backgroundTint="@color/mainGreen"/>

        <Button
            android:id="@+id/login_button"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:text="로그인"
            android:background="@drawable/all_button_bg_ripple_round_15"
            android:textColor="@color/white"
            android:textSize="15dp"/>


        <TextView
            android:id="@+id/login_text04_forgetPW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="비밀 번호를 잊으셨나요?"
            android:textColor="@color/gray"
            android:textSize="10dp" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/login_text05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="저희 회원이 아니신가요?"
                android:textSize="11dp"
                android:textColor="#4D4D4D" />

            <TextView
                android:id="@+id/login_text06_signup"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="회원가입 하기"
                android:textColor="@color/gray"
                android:textSize="11dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>